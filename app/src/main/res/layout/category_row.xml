<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/category_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_default_padding">

            <ImageView
                android:id="@+id/category_img"
                android:layout_width="@dimen/row_height"
                android:layout_height="@dimen/row_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/activity_small_margin"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/category_img"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/category_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_name"
                android:layout_toRightOf="@+id/category_img" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>